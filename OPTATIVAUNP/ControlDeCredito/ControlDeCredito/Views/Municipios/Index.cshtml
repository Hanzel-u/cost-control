@model IEnumerable<ControlDeCredito.Models.Municipio>

@{
    ViewBag.Title = "Index";
}

<h2>Municipio</h2>

<a>@Html.ActionLink("Crear Nuevo", "Create")</a>
<br />
<br />
<table class="table">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Departamento.CodigoDeDepartamento)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.CodigoDeMunicipio)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.DescripcionDeMunicipio)
        </th>

        <th class="text-center">Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.CodigoDeDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDeMunicipio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDeMunicipio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model,
            defaultSort: "titulo", rowsPerPage: 10, canPage: true, canSort: false, fieldNamePrefix: "gridItens", pageFieldName: "dentro", selectionFieldName: "selectedRow");
}


@model IEnumerable<ControlDeCredito.Models.TipoDeCliente>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de Clientes</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoTipoDeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionTipoDeCliente)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoTipoDeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionTipoDeCliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model,
            defaultSort: "titulo", rowsPerPage: 10, canPage: true, canSort: false, fieldNamePrefix: "gridItens", pageFieldName: "dentro", selectionFieldName: "selectedRow");
}

@model IEnumerable<ControlDeCredito.Models.Sexo>

@{
    ViewBag.Title = "Index";
}

<h2>Sexo</h2>

<a>@Html.ActionLink("Crear Nuevo", "Create")</a>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoDeSexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionDeSexo)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDeSexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDeSexo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


@model ControlDeCredito.Models.Sexo

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Sexo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.CodigoDeSexo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CodigoDeSexo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CodigoDeSexo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DescripcionDeSexo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DescripcionDeSexo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DescripcionDeSexo, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <p>
        <input type="submit" class="btn btn-success" value="Guardar" />
        <input type="button" class="btn btn-danger" value="Regresar" onclick="Regresar()" />
    </p>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

     function Regresar() {
         location.href = "@Url.Action("Index", "Sexoes")"
            return
        }
</script>
